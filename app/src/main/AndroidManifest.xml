<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="istg.edu.ec.appEmprendeISTGDev">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EmprendeIstg"
        tools:targetApi="31">

        <!-- ===================================================================== -->
        <!--  InicioActivity: AHORA ES LA ÚNICA PUERTA DE ENTRADA A LA APLICACIÓN  -->
        <!-- ===================================================================== -->
        <activity
            android:name=".InicioActivity"
            android:exported="true"
            android:label="@string/title_activity_inicio"
            android:theme="@style/Theme.EmprendeIstg.NoActionBar">

            <!-- FILTRO 1: Para ser la app principal que se lanza desde el menú -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- FILTRO 2: Para recibir los deep links y abrir perfiles o publicaciones -->
            <!-- Se combinan los dos filtros en uno solo para mayor claridad y eficiencia. -->
            <intent-filter tools:ignore="AppLinkUrlError">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                
                <!-- Acepta deep links para perfiles (app://profile/...) -->
                <data
                    android:host="profile"
                    android:scheme="app" />
                <!-- Acepta deep links para publicaciones (app://publication/...) -->
                <data
                    android:host="publication"
                    android:scheme="app" />
            </intent-filter>

        </activity>

        <!-- ===================================================================== -->
        <!--  Otras Activities que son internas a la app (NO son puntos de entrada) -->
        <!-- ===================================================================== -->
        <activity
            android:name=".ui.activitys.PantallaInicialActivity"
            android:exported="false" />

        <activity
            android:name=".ui.activitys.Invitado"
            android:exported="false" />

        <activity
            android:name=".MainActivity"
            android:exported="false" />

    </application>
</manifest>